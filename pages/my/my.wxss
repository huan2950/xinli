/* pages/my/my.wxss */
/* 导航界面样式 */
.user{
  width: 100%;
  height: 400rpx;
  /* background: red; */
  overflow: hidden;
}
.user-image{
  width: 150rpx;
  height: 150rpx;
  /* background: black; */
  margin: 0rpx auto;
  margin-top: 50rpx;
}
.user-image image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.nickname{
  color: rgb(0, 0, 0);
  font-size: 40rpx;
  text-align: center;
}

/* 选择栏目样式 */
.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}

.item {
  display: flex;
  flex-direction: row;
}

.title {
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 15px;
  font-size: 15px;
}

.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}

.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}
